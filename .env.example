# Server Configuration
# Port number for the application server
PORT=3000

# Database Configuration
# MongoDB connection string (REQUIRED - application will not start without this)
# Replace with your actual MongoDB URI (local or MongoDB Atlas)
MONGO_URI=
# Session Configuration
# Secret key for session encryption (generate a secure random string)
SESSION_SECRET=your-secure-random-string-here-change-in-production

# Environment
# Set to 'development' or 'production'
NODE_ENV=development

# Email Configuration
# SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net, smtp.mailgun.org)
SMTP_HOST=smtp.gmail.com

# SMTP port (587 for STARTTLS, 465 for SSL)
SMTP_PORT=587

# Use SSL/TLS (true for port 465, false for other ports with STARTTLS)
SMTP_SECURE=false

# SMTP authentication username (your email address)
SMTP_USER=your-email@example.com

# SMTP authentication password (use app-specific password for Gmail)
# For Gmail: https://support.google.com/accounts/answer/185833
# For SendGrid/Mailgun: Use API key
SMTP_PASS=your-app-password

# Sender email address and name
MAIL_FROM=Saheli Plus <no-reply@saheliplus.com>

# Security Configuration
# Secret key for OTP hashing (generate a secure random string, keep secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64url'))"
OTP_PEPPER=your-secure-random-pepper-string-change-in-production

# Bcrypt cost factor (12 recommended for 2024, adjust based on server performance)
# Higher values = more secure but slower. Target: ~200ms per hash
BCRYPT_ROUNDS=12

# Application URL (used in email templates)
APP_URL=http://localhost:3000

# Payment Gateway Configuration
# Razorpay API credentials for payment processing
# Get test keys from Razorpay Dashboard: https://dashboard.razorpay.com/app/keys
# Test keys start with 'rzp_test_', live keys start with 'rzp_live_'
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Razorpay webhook signature secret (for webhook verification)
# Generate from Razorpay Dashboard → Webhooks → Add Webhook
# SECURITY: Never expose KEY_SECRET or WEBHOOK_SECRET to client-side code
RAZORPAY_WEBHOOK_SECRET=
