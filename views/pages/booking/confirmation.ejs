<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Saheli Plus</title>
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/booking.css">
  <style>
    .confirmation-container {
      max-width: 800px;
      margin: 2rem auto;
      padding: 2rem;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .confirmation-header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid #f0f0f0;
    }

    .confirmation-header .success-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 1rem;
      background: #10b981;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 40px;
    }

    .confirmation-header h1 {
      color: #10b981;
      margin-bottom: 0.5rem;
      font-size: 2rem;
    }

    .confirmation-header p {
      color: #666;
      font-size: 1.1rem;
    }

    .booking-info-section {
      margin-bottom: 2rem;
    }

    .booking-info-section h2 {
      color: #333;
      font-size: 1.3rem;
      margin-bottom: 1rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid #e5e5e5;
    }

    .info-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .info-item {
      padding: 0.75rem;
      background: #f9f9f9;
      border-radius: 6px;
    }

    .info-item label {
      display: block;
      font-size: 0.85rem;
      color: #666;
      margin-bottom: 0.25rem;
      font-weight: 500;
    }

    .info-item .value {
      font-size: 1rem;
      color: #333;
      font-weight: 600;
    }

    .status-badge {
      display: inline-block;
      padding: 0.4rem 1rem;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-badge.confirmed {
      background: #d1fae5;
      color: #065f46;
    }

    .status-badge.pending {
      background: #fef3c7;
      color: #92400e;
    }

    .price-breakdown {
      background: #f0f9ff;
      padding: 1rem;
      border-radius: 6px;
      margin-top: 1rem;
    }

    .price-row {
      display: flex;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .price-row.total {
      border-top: 2px solid #0284c7;
      margin-top: 0.5rem;
      padding-top: 0.75rem;
      font-weight: 700;
      font-size: 1.2rem;
      color: #0c4a6e;
    }

    .action-buttons {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      justify-content: center;
    }

    .btn {
      padding: 0.75rem 2rem;
      border-radius: 6px;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      transition: all 0.3s;
      border: none;
      font-size: 1rem;
    }

    .btn-primary {
      background: #7c3aed;
      color: white;
    }

    .btn-primary:hover {
      background: #6d28d9;
    }

    .btn-secondary {
      background: #e5e5e5;
      color: #333;
    }

    .btn-secondary:hover {
      background: #d4d4d4;
    }

    @media (max-width: 768px) {
      .info-grid {
        grid-template-columns: 1fr;
      }

      .confirmation-container {
        margin: 1rem;
        padding: 1.5rem;
      }

      .action-buttons {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <%- include('../../partials/header') %>

  <div class="confirmation-container">
    <div class="confirmation-header">
      <div class="success-icon">✓</div>
      <h1>Booking Confirmed!</h1>
      <p>Your appointment has been successfully booked</p>
    </div>

    <!-- Booking Reference -->
    <div class="booking-info-section">
      <h2>Booking Details</h2>
      <div class="info-grid">
        <div class="info-item">
          <label>Booking ID</label>
          <div class="value"><%= booking._id %></div>
        </div>
        <div class="info-item">
          <label>Status</label>
          <div class="value">
            <span class="status-badge <%= booking.status === 'Confirmed' ? 'confirmed' : 'pending' %>">
              <%= booking.status %>
            </span>
          </div>
        </div>
        <div class="info-item">
          <label>Date</label>
          <div class="value"><%= new Date(booking.date).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></div>
        </div>
        <div class="info-item">
          <label>Time</label>
          <div class="value"><%= booking.startTime %> - <%= booking.endTime %></div>
        </div>
      </div>
    </div>

    <!-- Service Information -->
    <div class="booking-info-section">
      <h2>Service Information</h2>
      <div class="info-grid">
        <div class="info-item">
          <label>Service Name</label>
          <div class="value"><%= booking.serviceId.title %></div>
        </div>
        <div class="info-item">
          <label>Category</label>
          <div class="value"><%= booking.serviceId.category %></div>
        </div>
        <div class="info-item">
          <label>Service Type</label>
          <div class="value"><%= booking.serviceType %></div>
        </div>
        <div class="info-item">
          <label>Duration</label>
          <div class="value"><%= booking.duration %> hours</div>
        </div>
      </div>
      <% if (booking.serviceId.description) { %>
        <div class="info-item" style="margin-top: 1rem;">
          <label>Description</label>
          <div class="value"><%= booking.serviceId.description %></div>
        </div>
      <% } %>
    </div>

    <!-- Provider Information -->
    <div class="booking-info-section">
      <h2>Provider Information</h2>
      <div class="info-grid">
        <div class="info-item">
          <label>Name</label>
          <div class="value"><%= booking.providerId.name %></div>
        </div>
        <div class="info-item">
          <label>Email</label>
          <div class="value"><%= booking.providerId.email %></div>
        </div>
        <% if (booking.providerId.phone) { %>
          <div class="info-item">
            <label>Phone</label>
            <div class="value"><%= booking.providerId.phone %></div>
          </div>
        <% } %>
        <div class="info-item">
          <label>Location</label>
          <div class="value"><%= booking.providerId.city %></div>
        </div>
      </div>
    </div>

    <!-- Location Details (if applicable) -->
    <% if (booking.address) { %>
      <div class="booking-info-section">
        <h2>Service Location</h2>
        <div class="info-item">
          <label>Address</label>
          <div class="value"><%= booking.address %></div>
        </div>
      </div>
    <% } %>

    <!-- Additional Notes -->
    <% if (booking.notes) { %>
      <div class="booking-info-section">
        <h2>Additional Notes</h2>
        <div class="info-item">
          <div class="value"><%= booking.notes %></div>
        </div>
      </div>
    <% } %>

    <!-- Price Breakdown -->
    <div class="booking-info-section">
      <h2>Payment Summary</h2>
      <div class="price-breakdown">
        <div class="price-row">
          <span>Base Amount</span>
          <span>₹<%= booking.baseAmount.toFixed(2) %></span>
        </div>
        <% if (booking.travelFee && booking.travelFee > 0) { %>
          <div class="price-row">
            <span>Travel Fee</span>
            <span>₹<%= booking.travelFee.toFixed(2) %></span>
          </div>
        <% } %>
        <% if (booking.weekendPremium && booking.weekendPremium > 0) { %>
          <div class="price-row">
            <span>Weekend Premium</span>
            <span>₹<%= booking.weekendPremium.toFixed(2) %></span>
          </div>
        <% } %>
        <div class="price-row total">
          <span>Total Amount</span>
          <span>₹<%= booking.totalAmount.toFixed(2) %></span>
        </div>
        <div class="price-row" style="border-top: 1px solid #bae6fd; margin-top: 0.5rem; padding-top: 0.5rem;">
          <span>Advance Paid (<%= booking.advancePercentage %>%)</span>
          <span style="color: #4CAF50; font-weight: 600;">₹<%= booking.advancePaid.toFixed(2) %></span>
        </div>
        <div class="price-row">
          <span>Remaining Balance</span>
          <span style="color: #FF9800; font-weight: 600;">₹<%= booking.remainingAmount.toFixed(2) %></span>
        </div>
        <% if (booking.paymentMethod) { %>
          <div class="price-row" style="border-top: 1px solid #bae6fd; margin-top: 0.5rem; padding-top: 0.5rem;">
            <span>Payment Method</span>
            <span style="text-transform: capitalize;"><%= booking.paymentMethod %></span>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
      <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
      <a href="/services" class="btn btn-secondary">Browse More Services</a>
    </div>
  </div>

  <%- include('../../partials/footer') %>
</body>
</html>
