<!-- Styles and scripts are included by layout when bookingsPage flag is set -->

<div class="provider-bookings-container">
  <div class="page-header">
    <h1>My Bookings</h1>
    <p class="subtitle">Manage all your service bookings in one place</p>
  </div>

  <!-- Filter Tabs -->
  <div class="filter-tabs">
    <button class="tab-btn active" data-status="all">All</button>
    <button class="tab-btn" data-status="Confirmed">Confirmed</button>
    <button class="tab-btn" data-status="InProgress">In Progress</button>
    <button class="tab-btn" data-status="Completed">Completed</button>
    <button class="tab-btn" data-status="Cancelled">Cancelled</button>
  </div>

  <!-- Bookings List -->
  <div id="bookingsList" class="bookings-list">
    <div class="loading-indicator">Loading bookings...</div>
  </div>

  <!-- Empty State -->
  <div id="emptyState" class="empty-state" style="display: none;">
    <svg width="120" height="120" viewBox="0 0 120 120" fill="none">
      <circle cx="60" cy="60" r="50" fill="#F9C5D1" opacity="0.2"/>
      <path d="M40 60 L50 70 L80 40" stroke="#F6A5C0" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <h3>No bookings found</h3>
    <p>Bookings matching your filter will appear here</p>
  </div>
</div>

<!-- Booking Action Modal -->
<div id="actionModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-modal">&times;</span>
    <h2 id="modalTitle">Confirm Action</h2>
    <div id="modalBody" class="modal-body"></div>
    <div class="modal-actions">
      <button id="confirmBtn" class="btn btn-primary">Confirm</button>
      <button id="cancelBtn" class="btn btn-secondary">Cancel</button>
    </div>
  </div>
</div>
