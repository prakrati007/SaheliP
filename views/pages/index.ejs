<!-- Featured Services Section -->
<section class="featured-services-modern">
  <div class="container">
    <div class="section-header-modern">
      <h2 class="section-title-modern">Featured Services</h2>
      <p class="section-subtitle-modern">Discover top-rated services from our trusted community</p>
    </div>
    <div class="featured-grid-modern">
      <% if (featuredServices && featuredServices.length > 0) { %>
        <% featuredServices.forEach(function(service) { %>
          <div class="featured-card-modern">
            <a href="/service/<%= service._id %>" class="featured-link-modern">
              <div class="featured-image-wrapper">
                <% if (service.images && service.images.length > 0) { %>
                  <img src="<%= service.images[0] %>" alt="<%= service.title %>" class="featured-image" />
                <% } else { %>
                  <div class="featured-image-placeholder">
                    <svg width="60" height="60" viewBox="0 0 60 60" fill="none">
                      <path d="M30 15v30M15 30h30" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
                    </svg>
                  </div>
                <% } %>
                <div class="featured-badge">Featured</div>
              </div>
              <div class="featured-content">
                <span class="featured-category-badge"><%= service.category %></span>
                <h3 class="featured-title"><%= service.title %></h3>
                <p class="featured-provider">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zM8 9a6 6 0 0 0-6 4v2h12v-2a6 6 0 0 0-6-4z" fill="currentColor"/>
                  </svg>
                  <%= service.providerId ? service.providerId.name : 'Provider' %>
                </p>
                <div class="featured-meta">
                  <span class="featured-price">‚Çπ<%= service.basePrice %></span>
                  <% if (service.averageRating > 0) { %>
                    <span class="featured-rating">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                        <path d="M8 1l2 5h5l-4 3 1.5 5L8 11l-4.5 3L5 9 1 6h5l2-5z" fill="#FFD700"/>
                      </svg>
                      <%= service.averageRating.toFixed(1) %>
                    </span>
                  <% } %>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
      <% } else { %>
        <div class="featured-card-modern placeholder-card">
          <div class="featured-image-placeholder">
            <svg width="60" height="60" viewBox="0 0 60 60" fill="none">
              <path d="M30 15v30M15 30h30" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
            </svg>
          </div>
          <div class="featured-content">
            <h4 class="placeholder-title">Coming Soon</h4>
            <p class="placeholder-text">Featured services will appear here</p>
          </div>
        </div>
        <div class="featured-card-modern placeholder-card">
          <div class="featured-image-placeholder">
            <svg width="60" height="60" viewBox="0 0 60 60" fill="none">
              <path d="M30 15v30M15 30h30" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
            </svg>
          </div>
          <div class="featured-content">
            <h4 class="placeholder-title">Coming Soon</h4>
            <p class="placeholder-text">Featured services will appear here</p>
          </div>
        </div>
        <div class="featured-card-modern placeholder-card">
          <div class="featured-image-placeholder">
            <svg width="60" height="60" viewBox="0 0 60 60" fill="none">
              <path d="M30 15v30M15 30h30" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
            </svg>
          </div>
          <div class="featured-content">
            <h4 class="placeholder-title">Coming Soon</h4>
