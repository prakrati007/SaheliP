<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Empowering Women, One Service at a Time</h1>
      <p class="hero-subtitle">
        Connect with skilled women professionals or offer your services to build a thriving community
      </p>
      
      <!-- Search Bar -->
      <div class="search-bar">
        <form action="/services" method="GET">
          <input type="text" name="search" class="search-input" placeholder="What service are you looking for?" />
          <input type="text" name="city" class="search-input" placeholder="Enter your city" />
          <button type="submit" class="btn btn-primary search-btn">Search Services</button>
        </form>
      </div>
      
      <div class="hero-cta">
        <a href="/services" class="btn btn-primary btn-large">Browse All Services</a>
        <a href="/auth/signup?type=provider" class="btn btn-secondary btn-large">List Your Service</a>
      </div>
    </div>
  </div>
</section>

<!-- Service Categories Section -->
<section class="categories-section">
  <div class="container">
    <h2 class="section-title">Popular Service Categories</h2>
    <div class="categories-grid">
      <% Object.keys(categories).forEach(function(catKey) { 
        const category = categories[catKey];
        const iconMap = {
          'Beauty & Personal Care': 'üíÑ',
          'Health & Wellness': 'üßò',
          'Home Services': 'üè†',
          'Education & Training': 'üìö',
          'Professional Services': 'üíº',
          'Events & Entertainment': 'üéâ',
          'Creative Services': 'üé®',
          'Fashion & Styling': 'üëó'
        };
        const icon = iconMap[category.label] || '‚ú®';
        const subcatList = category.subcategories ? category.subcategories.slice(0, 3).join(', ') : '';
      %>
        <a href="/services?category=<%= encodeURIComponent(catKey) %>" class="category-card-link">
          <div class="category-card clickable">
            <div class="category-icon"><%= icon %></div>
            <h3><%= category.label %></h3>
            <p><%= subcatList %></p>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works">
  <div class="container">
    <h2 class="section-title">How It Works</h2>
    <div class="steps-grid">
      <div class="step-card">
        <div class="step-number">1</div>
        <h3>Create Your Profile</h3>
        <p>Sign up as a service seeker or provider and complete your profile</p>
      </div>
      <div class="step-card">
        <div class="step-number">2</div>
        <h3>Browse or List Services</h3>
        <p>Find the perfect service or showcase what you offer</p>
      </div>
      <div class="step-card">
        <div class="step-number">3</div>
        <h3>Connect & Book</h3>
        <p>Make secure bookings and communicate directly</p>
      </div>
      <div class="step-card">
        <div class="step-number">4</div>
        <h3>Review & Grow</h3>
        <p>Share feedback and build your reputation</p>
      </div>
    </div>
  </div>
</section>

<!-- Featured Providers Section -->
<section class="featured-providers">
  <div class="container">
    <h2 class="section-title">Featured Services</h2>
    <p class="section-subtitle">Discover top-rated services from our community</p>
    <div class="providers-grid">
      <% if (featuredServices && featuredServices.length > 0) { %>
        <% featuredServices.forEach(function(service) { %>
          <div class="featured-service-card">
            <a href="/service/<%= service._id %>">
              <% if (service.images && service.images.length > 0) { %>
                <img src="<%= service.images[0] %>" alt="<%= service.title %>" class="service-image" />
              <% } else { %>
                <div class="service-image-placeholder">üì∑</div>
              <% } %>
              <div class="service-info">
                <h3><%= service.title %></h3>
                <p class="provider-name">by <%= service.providerId ? service.providerId.name : 'Provider' %></p>
                <span class="category-badge"><%= service.category %></span>
                <div class="service-meta">
                  <span class="price">‚Çπ<%= service.basePrice %></span>
                  <% if (service.averageRating > 0) { %>
                    <span class="rating">‚≠ê <%= service.averageRating.toFixed(1) %></span>
                  <% } %>
                </div>
              </div>
            </a>
          </div>
        <% }) %>
