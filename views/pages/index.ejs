          <p>Featured services will appear here</p>
        </div>
        <div class="provider-card">
          <div class="provider-placeholder">
            <span>üë§</span>
          </div>
          <h4>Coming Soon</h4>
          <p>Featured services will appear here</p>
        </div>
      <% } %>
    </div>
  </div>
</section>

