<!-- Service Categories Section -->
<section class="categories-section-modern">
  <div class="container">
    <div class="section-header-modern">
      <h2 class="section-title-modern">Explore Popular Categories</h2>
      <p class="section-subtitle-modern">Discover a wide range of services tailored to your needs</p>
    </div>
    <div class="categories-grid-modern">
      <% Object.keys(categories).forEach(function(catKey) { 
        const category = categories[catKey];
        const iconMap = {
          'Beauty & Personal Care': 'üíÑ',
          'Health & Wellness': 'üßò',
          'Home Services': 'üè†',
          'Education & Training': 'üìö',
          'Professional Services': 'üíº',
          'Events & Entertainment': 'üéâ',
          'Creative Services': 'üé®',
          'Fashion & Styling': 'üëó'
        };
        const icon = iconMap[category.label] || '‚ú®';
        const subcatList = category.subcategories ? category.subcategories.slice(0, 3).join(', ') : '';
      %>
        <a href="/services?category=<%= encodeURIComponent(catKey) %>" class="category-card-modern">
          <div class="category-icon-modern"><%= icon %></div>
          <h3 class="category-title-modern"><%= category.label %></h3>
          <p class="category-subtitle-modern"><%= subcatList %></p>
          <div class="category-arrow">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M5 10h10M10 5l5 5-5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</section>

