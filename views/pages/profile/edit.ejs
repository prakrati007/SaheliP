
<div class="edit-profile-wrapper">
  <div class="edit-profile-header">
    <a href="/profile/view" class="back-link">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Back to Profile
    </a>
    <h1 class="edit-profile-title">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
        <circle cx="12" cy="7" r="4"></circle>
      </svg>
      Edit Your Profile
    </h1>
    <p class="edit-profile-subtitle">Update your information and let others know more about you</p>
  </div>

  <% if (errors && errors.length) { %>
    <div class="alert-banner alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="12" y1="8" x2="12" y2="12"></line>
        <line x1="12" y1="16" x2="12.01" y2="16"></line>
      </svg>
      <div class="alert-content">
        <% errors.forEach(function(error) { %>
          <p><%= error %></p>
        <% }) %>
      </div>
    </div>
  <% } %>

  <form method="POST" action="/profile/edit" enctype="multipart/form-data" id="profileEditForm" class="edit-profile-form">
    
    <!-- Profile Picture Section -->
    <div class="edit-card">
      <div class="edit-card-header">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          <circle cx="8.5" cy="8.5" r="1.5"></circle>
          <polyline points="21 15 16 10 5 21"></polyline>
        </svg>
        <h2>Profile Picture <span style="font-size: 0.85rem; font-weight: 400; color: #999;">(Optional)</span></h2>
      </div>
      <div class="edit-card-body">
        <div class="picture-upload-area">
          <div class="picture-preview-wrapper">
            <% if (user.profilePic) { %>
              <img src="<%= user.profilePic %>" alt="Profile" class="picture-preview-img" id="picturePreview" />
            <% } else { %>
              <div class="picture-preview-placeholder" id="picturePreview">
                <span><%= user && user.name && user.name.length > 0 ? user.name[0].toUpperCase() : 'U' %></span>
              </div>
            <% } %>
            <div class="picture-overlay">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                <circle cx="12" cy="13" r="4"></circle>
              </svg>
              <span>Change</span>
            </div>
          </div>
          <div class="picture-upload-info">
            <label for="profilePic" class="picture-upload-btn">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="17 8 12 3 7 8"></polyline>
                <line x1="12" y1="3" x2="12" y2="15"></line>
              </svg>
              Upload New Picture
            </label>
            <input type="file" id="profilePic" name="profilePic" accept="image/jpeg,image/png,image/webp" hidden />
            <p class="upload-hint">JPG, PNG or WebP • Max 5MB • Optional</p>
            <% if (user.profilePic) { %>
              <button type="submit" class="picture-remove-btn" formaction="/profile/delete-picture" formmethod="POST">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
                Remove Picture
              </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Basic Information -->
    <div class="edit-card">
      <div class="edit-card-header">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        <h2>Basic Information</h2>
      </div>
      <div class="edit-card-body">
        <div class="form-grid">
          <div class="form-field">
            <label for="name" class="form-label">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              Full Name <span class="required">*</span>
            </label>
            <input type="text" id="name" name="name" value="<%= user.name %>" class="form-input" placeholder="Enter your full name" required minlength="2" maxlength="50" />
          </div>

          <div class="form-field">
            <label for="email" class="form-label">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
              Email Address
            </label>
            <input type="email" id="email" name="email" value="<%= user.email %>" class="form-input disabled" readonly disabled />
            <p class="field-hint">Email cannot be changed for security reasons</p>
          </div>

          <div class="form-field">
            <label for="city" class="form-label">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              City <span class="required">*</span>
            </label>
            <input type="text" id="city" name="city" value="<%= user.city %>" class="form-input" placeholder="e.g., Bhopal" required minlength="2" maxlength="50" />
          </div>

          <div class="form-field">
            <label for="pincode" class="form-label">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                <line x1="12" y1="18" x2="12.01" y2="18"></line>
              </svg>
              Pincode <span class="required">*</span>
            </label>
            <input type="text" id="pincode" name="pincode" value="<%= user.pincode %>" class="form-input" placeholder="6-digit pincode" required pattern="\d{6}" maxlength="6" />
          </div>
        </div>
      </div>
    </div>

    <!-- About Section -->
    <div class="edit-card">
      <div class="edit-card-header">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        <h2>About You</h2>
      </div>
      <div class="edit-card-body">
        <div class="form-field">
          <label for="bio" class="form-label">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="17" y1="10" x2="3" y2="10"></line>
              <line x1="21" y1="6" x2="3" y2="6"></line>
              <line x1="21" y1="14" x2="3" y2="14"></line>
              <line x1="17" y1="18" x2="3" y2="18"></line>
            </svg>
            Bio
          </label>
          <textarea id="bio" name="bio" class="form-textarea" rows="5" maxlength="500" placeholder="Tell others about yourself, your skills, and what makes you special..."><%= user.bio || '' %></textarea>
          <div class="textarea-footer">
            <span class="character-counter" id="bioCounter">0/500</span>
          </div>
        </div>

        <div class="form-field">
          <label for="languages" class="form-label">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="2" y1="12" x2="22" y2="12"></line>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
            Languages You Speak
          </label>
          <input type="text" id="languages" name="languages" value="<%= user.languages ? user.languages.join(', ') : '' %>" class="form-input" placeholder="e.g., English, Hindi, Bengali" />
          <p class="field-hint">Separate multiple languages with commas</p>
        </div>
      </div>
    </div>

    <!-- Professional Details (Saheli only) -->
    <% if (user.role === 'saheli') { %>
    <div class="edit-card">
      <div class="edit-card-header">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
          <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
        </svg>
        <h2>Professional Details</h2>
      </div>
      <div class="edit-card-body">
        <div class="form-field">
          <label for="experienceYears" class="form-label">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            Years of Experience
          </label>
          <input type="number" id="experienceYears" name="experienceYears" value="<%= user.experienceYears !== null ? user.experienceYears : '' %>" class="form-input" placeholder="e.g., 5" min="0" max="50" />
          <p class="field-hint">How many years have you been providing services?</p>
        </div>

        <div class="form-field">
          <label for="certifications" class="form-label">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            Certifications & Qualifications
          </label>
          <textarea id="certifications" name="certifications" class="form-textarea" rows="4" placeholder="e.g., Certified Makeup Artist, Beauty Therapy Diploma"><%= user.certifications ? user.certifications.join(', ') : '' %></textarea>
          <p class="field-hint">Separate multiple certifications with commas</p>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Action Buttons -->
    <div class="form-actions-modern">
      <button type="submit" class="btn-save">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        Save Changes
      </button>
      <a href="/profile/view" class="btn-cancel">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
        Cancel
      </a>
    </div>
  </form>
</div>
<script src="/js/profile-edit.js"></script>
