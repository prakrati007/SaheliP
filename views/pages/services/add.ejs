<div class="add-service-modern-wrapper">
  <!-- Header Section -->
  <div class="add-service-header">
    <div class="header-content">
      <a href="/services/my" class="back-link-modern">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        My Services
      </a>
      <h1 class="add-service-title">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="16"></line>
          <line x1="8" y1="12" x2="16" y2="12"></line>
        </svg>
        Add New Service
      </h1>
      <p class="add-service-subtitle">Share your skills with the community</p>
    </div>
  </div>

  <% if (errors && errors.length) { %>
    <div class="alert-banner-modern alert-error-modern">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="15" y1="9" x2="9" y2="15"></line>
        <line x1="9" y1="9" x2="15" y2="15"></line>
      </svg>
      <div class="alert-content-modern">
        <strong>Please fix the following errors:</strong>
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    </div>
  <% } %>

  <form id="serviceForm" action="/services" method="POST" enctype="multipart/form-data" novalidate class="add-service-form-modern">
    
    <!-- Step 1: Basic Information -->
    <div class="service-card-modern" data-step="1">
      <div class="card-header-modern">
        <div class="header-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </div>
        <div class="header-text-modern">
          <h2>Basic Information</h2>
          <p>Tell us about your service</p>
        </div>
      </div>
      
      <div class="card-body-modern">
        <div class="form-grid-modern">
          <div class="form-field-modern full-width">
            <label for="title" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="17" y1="10" x2="3" y2="10"></line>
                <line x1="21" y1="6" x2="3" y2="6"></line>
                <line x1="21" y1="14" x2="3" y2="14"></line>
                <line x1="17" y1="18" x2="3" y2="18"></line>
              </svg>
              Service Title <span class="required-star">*</span>
            </label>
            <input type="text" id="title" name="title" class="field-input-modern" 
              placeholder="e.g., Professional Bridal Makeup" 
              required minlength="5" maxlength="100" 
              value="<%= formData.title || '' %>" />
          </div>

          <div class="form-field-modern">
            <label for="category" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
              </svg>
              Category <span class="required-star">*</span>
            </label>
            <select id="category" name="category" class="field-select-modern" required>
              <option value="">Select category</option>
              <% Object.keys(categories).forEach(function(cat) { %>
                <option value="<%= cat %>" <%= formData.category === cat ? 'selected' : '' %>>
                  <%= categories[cat].label %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-field-modern">
            <label for="subcategory" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
              </svg>
              Subcategory
            </label>
            <select id="subcategory" name="subcategory" class="field-select-modern">
              <option value="">Select subcategory</option>
            </select>
          </div>

          <div class="form-field-modern full-width">
            <label for="description" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              </svg>
              Description <span class="required-star">*</span>
            </label>
            <textarea id="description" name="description" class="field-textarea-modern" 
              placeholder="Describe your service in detail - what you offer, your expertise, what makes you unique..." 
              required minlength="50" maxlength="2000" rows="5"><%= formData.description || '' %></textarea>
            <div class="textarea-footer-modern">
              <span class="char-counter-modern" id="descCounter">0/2000</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 2: Pricing -->
    <div class="service-card-modern" data-step="2">
      <div class="card-header-modern">
        <div class="header-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="1" x2="12" y2="23"></line>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
          </svg>
        </div>
        <div class="header-text-modern">
          <h2>Pricing</h2>
          <p>Set your rates and payment terms</p>
        </div>
      </div>
      
      <div class="card-body-modern">
        <div class="form-field-modern full-width">
          <label class="field-label-modern">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
              <line x1="7" y1="7" x2="7.01" y2="7"></line>
            </svg>
            Pricing Type <span class="required-star">*</span>
          </label>
          <div class="pricing-type-cards">
            <% pricingTypes.forEach(function(type) { %>
              <label class="pricing-card-option">
                <input type="radio" name="pricingType" value="<%= type %>" 
                  <%= formData.pricingType === type ? 'checked' : '' %> required />
                <div class="pricing-card-content">
                  <div class="pricing-icon">
                    <% if (type === 'Hourly') { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                      </svg>
                    <% } else if (type === 'Fixed') { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="3" y1="9" x2="21" y2="9"></line>
                        <line x1="9" y1="21" x2="9" y2="9"></line>
                      </svg>
                    <% } else { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    <% } %>
                  </div>
                  <span class="pricing-label"><%= type %></span>
                </div>
              </label>
            <% }) %>
          </div>
        </div>

        <div class="form-grid-modern">
          <div class="form-field-modern">
            <label for="basePrice" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="1" x2="12" y2="23"></line>
                <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
              </svg>
              Base Price <span class="required-star">*</span>
            </label>
            <div class="input-with-icon">
              <span class="input-prefix">â‚¹</span>
              <input type="number" id="basePrice" name="basePrice" class="field-input-modern with-prefix" 
                placeholder="Enter amount" min="0" max="100000" required 
                value="<%= formData.basePrice || '' %>" />
            </div>
          </div>

          <div class="form-field-modern">
            <label for="advancePercentage" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"></path>
                <path d="M12 18V6"></path>
              </svg>
              Advance Payment %
            </label>
            <input type="number" id="advancePercentage" name="advancePercentage" class="field-input-modern" 
              placeholder="e.g., 20" min="0" max="50" 
              value="<%= formData.advancePercentage || 20 %>" />
            <p class="field-hint-modern">Percentage of advance payment required</p>
          </div>

          <div class="form-field-modern">
            <label for="travelFee" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"></path>
              </svg>
              Travel Fee
            </label>
            <div class="input-with-icon">
              <span class="input-prefix">â‚¹</span>
              <input type="number" id="travelFee" name="travelFee" class="field-input-modern with-prefix" 
                placeholder="Additional travel charge" min="0" max="5000" 
                value="<%= formData.travelFee || '' %>" />
            </div>
          </div>

          <div class="form-field-modern">
            <label for="weekendPremium" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              Weekend Premium %
            </label>
            <input type="number" id="weekendPremium" name="weekendPremium" class="field-input-modern" 
              placeholder="e.g., 15" min="0" max="15" 
              value="<%= formData.weekendPremium || '' %>" />
            <p class="field-hint-modern">Weekend price markup</p>
          </div>
        </div>

        <div id="packageSection" style="display:none;">
          <div class="package-builder-modern">
            <div class="package-section-header-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                <line x1="12" y1="22.08" x2="12" y2="12"></line>
              </svg>
              <h3 class="package-section-title-modern">Package Details</h3>
            </div>
            <div id="packageList" class="package-list-modern"></div>
            <button type="button" class="add-package-btn-modern" id="addPackageBtn">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="16"></line>
                <line x1="8" y1="12" x2="16" y2="12"></line>
              </svg>
              Add Package
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 3: Service Mode & Location -->
    <div class="service-card-modern" data-step="3">
      <div class="card-header-modern">
        <div class="header-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <div class="header-text-modern">
          <h2>Service Mode & Location</h2>
          <p>Where do you provide your service?</p>
        </div>
      </div>
      
      <div class="card-body-modern">
        <div class="form-field-modern full-width">
          <label class="field-label-modern">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
            Service Mode <span class="required-star">*</span>
          </label>
          <div class="mode-cards">
            <% modes.forEach(function(mode) { %>
              <label class="mode-card-option">
                <input type="radio" name="mode" value="<%= mode %>" 
                  <%= formData.mode === mode ? 'checked' : '' %> required />
                <div class="mode-card-content">
                  <div class="mode-icon">
                    <% if (mode === 'Onsite') { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                      </svg>
                    <% } else if (mode === 'Online') { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="2" y1="12" x2="22" y2="12"></line>
                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                      </svg>
                    <% } else { %>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="16 18 22 12 16 6"></polyline>
                        <polyline points="8 6 2 12 8 18"></polyline>
                      </svg>
                    <% } %>
                  </div>
                  <span class="mode-label"><%= mode %></span>
                </div>
              </label>
            <% }) %>
          </div>
        </div>

        <div class="form-grid-modern">
          <div class="form-field-modern">
            <label for="city" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              City <span class="required-star">*</span>
            </label>
            <input type="text" id="city" name="city" class="field-input-modern" 
              placeholder="e.g., Bhopal" required minlength="2" maxlength="50" 
              value="<%= formData.city || '' %>" />
          </div>

          <div class="form-field-modern">
            <label for="pincode" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                <line x1="12" y1="18" x2="12.01" y2="18"></line>
              </svg>
              Pincode <span class="required-star">*</span>
            </label>
            <input type="text" id="pincode" name="pincode" class="field-input-modern" 
              placeholder="6-digit pincode" required pattern="\d{6}" maxlength="6" 
              value="<%= formData.pincode || '' %>" />
          </div>
        </div>
      </div>
    </div>

    <!-- Step 4: Availability -->
    <div class="service-card-modern" data-step="4">
      <div class="card-header-modern">
        <div class="header-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
        </div>
        <div class="header-text-modern">
          <h2>Availability</h2>
          <p>Set your working hours and booking limits</p>
        </div>
      </div>
      
      <div class="card-body-modern">
        <div class="availability-builder-modern" id="availabilityBuilder"></div>

        <div class="form-grid-modern">
          <div class="form-field-modern">
            <label for="unavailableDates" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
              </svg>
              Unavailable Dates
            </label>
            <input type="date" id="unavailableDates" name="unavailableDates" class="field-input-modern" multiple />
          </div>

          <div class="form-field-modern">
            <label for="maxBookingsPerDay" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
              Max Bookings Per Day
            </label>
            <input type="number" id="maxBookingsPerDay" name="maxBookingsPerDay" class="field-input-modern" 
              placeholder="e.g., 5" min="1" max="20" 
              value="<%= formData.maxBookingsPerDay || 5 %>" />
          </div>

          <div class="form-field-modern">
            <label for="advanceBookingLimit" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              Advance Booking Limit (days)
            </label>
            <input type="number" id="advanceBookingLimit" name="advanceBookingLimit" class="field-input-modern" 
              placeholder="e.g., 30" min="1" max="365" 
              value="<%= formData.advanceBookingLimit || 30 %>" />
            <p class="field-hint-modern">Days in advance customers can book</p>
          </div>

          <div class="form-field-modern">
            <label for="preparationTime" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M10 2h4"></path>
                <path d="M12 14v-4"></path>
                <path d="M4 13a8 8 0 0 1 8-7 8 8 0 1 1-5.3 14L4 17.6"></path>
                <path d="M9 17H4v5"></path>
              </svg>
              Preparation Time (hours)
            </label>
            <input type="number" id="preparationTime" name="preparationTime" class="field-input-modern" 
              placeholder="e.g., 2" min="0" max="48" 
              value="<%= formData.preparationTime || 0 %>" />
            <p class="field-hint-modern">Hours needed between bookings</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 5: Additional Details -->
    <div class="service-card-modern" data-step="5">
      <div class="card-header-modern">
        <div class="header-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="3"></circle>
            <path d="M12 1v6m0 6v6m6-9h6m-6 6h6M6 15H0m6-6H0"></path>
          </svg>
        </div>
        <div class="header-text-modern">
          <h2>Additional Details</h2>
          <p>Showcase your expertise and policies</p>
        </div>
      </div>
      
      <div class="card-body-modern">
        <div class="form-grid-modern">
          <div class="form-field-modern">
            <label for="languages" class="field-label-modern">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="2" y1="12" x2="22" y2="12"></line>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
              </svg>
              Languages
            </label>
            <input type="text" id="languages" name="languages" class="field-input-modern" 
              placeholder="e.g., English, Hindi, Bengali" 
