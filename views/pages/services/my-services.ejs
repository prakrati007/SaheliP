<div class="my-services-modern-wrapper">
  <!-- Header Section -->
  <div class="my-services-header-modern">
    <div class="header-left-modern">
      <h1 class="my-services-title-modern">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
          <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
          <line x1="12" y1="22.08" x2="12" y2="12"></line>
        </svg>
        My Services
      </h1>
      <p class="my-services-subtitle-modern">Manage and showcase your professional services</p>
    </div>
    <a href="/services/add" class="btn-add-service-modern">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="12" y1="8" x2="12" y2="16"></line>
        <line x1="8" y1="12" x2="16" y2="12"></line>
      </svg>
      Add New Service
    </a>
  </div>

  <!-- Stats Bar -->
  <% if (services && services.length) { %>
    <%
    const activeServices = services.filter(s => !s.isPaused).length;
    const pausedServices = services.filter(s => s.isPaused).length;
    const totalViews = services.reduce((sum, s) => sum + (s.viewCount || 0), 0);
    %>
    <div class="services-stats-modern">
      <div class="stat-card-modern stat-total">
        <div class="stat-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
          </svg>
        </div>
        <div class="stat-content-modern">
          <div class="stat-value-modern"><%= services.length %></div>
          <div class="stat-label-modern">Total Services</div>
        </div>
      </div>
      <div class="stat-card-modern stat-active">
        <div class="stat-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 11 12 14 22 4"></polyline>
            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
          </svg>
        </div>
        <div class="stat-content-modern">
          <div class="stat-value-modern"><%= activeServices %></div>
          <div class="stat-label-modern">Active</div>
        </div>
      </div>
      <div class="stat-card-modern stat-paused">
        <div class="stat-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="6" y="4" width="4" height="16"></rect>
            <rect x="14" y="4" width="4" height="16"></rect>
          </svg>
        </div>
        <div class="stat-content-modern">
          <div class="stat-value-modern"><%= pausedServices %></div>
          <div class="stat-label-modern">Paused</div>
        </div>
      </div>
      <div class="stat-card-modern stat-views">
        <div class="stat-icon-modern">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>
        </div>
        <div class="stat-content-modern">
          <div class="stat-value-modern"><%= totalViews %></div>
          <div class="stat-label-modern">Total Views</div>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Filters and Sort -->
  <div class="services-controls-modern">
    <div class="filter-group-modern">
      <button class="filter-btn-modern active" data-filter="all">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
        All
      </button>
      <button class="filter-btn-modern" data-filter="active">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        Active
      </button>
      <button class="filter-btn-modern" data-filter="paused">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="6" y="4" width="4" height="16"></rect>
          <rect x="14" y="4" width="4" height="16"></rect>
        </svg>
        Paused
      </button>
    </div>
    <div class="sort-group-modern">
      <label for="sortSelect" class="sort-label-modern">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="7" y1="12" x2="21" y2="12"></line>
          <line x1="11" y1="18" x2="21" y2="18"></line>
        </svg>
        Sort by
      </label>
      <select class="sort-select-modern" id="sortSelect">
        <option value="newest">Newest</option>
        <option value="oldest">Oldest</option>
        <option value="mostViewed">Most Viewed</option>
        <option value="titleAZ">Title A-Z</option>
      </select>
    </div>
  </div>

  <!-- Services Grid -->
  <% if (services && services.length) { %>
    <div class="services-grid-modern" id="servicesGrid">
      <% services.forEach(function(service) { %>
        <%- include('../../partials/service-card', { service: service, showActions: true }) %>
      <% }) %>
    </div>
  <% } else { %>
    <div class="empty-state-modern">
      <div class="empty-state-illustration">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" fill="none">
          <circle cx="100" cy="100" r="80" fill="#FFF5F9"/>
          <path d="M70 100h60M100 70v60" stroke="#F06EA9" stroke-width="8" stroke-linecap="round"/>
          <circle cx="100" cy="100" r="90" stroke="#F9C5D1" stroke-width="4" stroke-dasharray="10 10"/>
        </svg>
      </div>
      <h2 class="empty-state-title-modern">No Services Yet</h2>
      <p class="empty-state-message-modern">Start sharing your skills with the community by adding your first service</p>
      <a href="/services/add" class="btn-empty-action-modern">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="16"></line>
          <line x1="8" y1="12" x2="16" y2="12"></line>
        </svg>
        Add Your First Service
      </a>
    </div>
  <% } %>
</div>

<script src="/js/my-services.js"></script>
