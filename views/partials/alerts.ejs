<% if (locals.successMessage || locals.errorMessage || locals.infoMessage || locals.warningMessage) { %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      <% if (locals.successMessage) { %>
        showToast('<%= successMessage.replace(/'/g, "\\'") %>', 'success', 5000);
      <% } %>
      <% if (locals.errorMessage) { %>
        showToast('<%= errorMessage.replace(/'/g, "\\'") %>', 'error', 6000);
      <% } %>
      <% if (locals.infoMessage) { %>
        showToast('<%= infoMessage.replace(/'/g, "\\'") %>', 'info', 5000);
      <% } %>
      <% if (locals.warningMessage) { %>
        showToast('<%= warningMessage.replace(/'/g, "\\'") %>', 'warning', 5000);
      <% } %>
    });
  </script>
<% } %>
