<div id="replyModal" class="modal" role="dialog" aria-modal="true" aria-labelledby="replyModalTitle" hidden>
  <div class="modal-content">
    <div class="modal-header">
      <h3 id="replyModalTitle">Reply to Review</h3>
      <button class="modal-close" aria-label="Close">Ã—</button>
    </div>
    <form id="replyForm">
      <input type="hidden" id="replyReviewId" />
      <div class="form-group">
        <label for="replyText">Your reply</label>
        <textarea id="replyText" rows="3" maxlength="500" placeholder="Write a thoughtful response..." required></textarea>
        <div class="help">Max 500 characters</div>
        <div class="error" data-error-for="replyText"></div>
      </div>
      <div class="modal-actions">
        <button type="button" class="btn-secondary" data-dismiss>Cancel</button>
        <button type="submit" class="btn-primary">Send Reply</button>
      </div>
    </form>
  </div>
</div>
